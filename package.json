{
  "name": "nodexec",
  "version": "0.4.2",
  "description": "A command line executor for javascript files.",
  "main": "index.js",
  "scripts": {
    "test": "./node_modules/.bin/nyc ./node_modules/.bin/mocha './src/**/*.spec.js'",
    "lint": "./node_modules/.bin/eslint --format './node_modules/eslint-friendly-formatter/index.js' .",
    "ci": "npm run lint && npm test",
    "postinstall": "node index.js config:create --silent"
  },
  "preferGlobal": true,
  "bin": "./index.js",
  "author": "Maximilian Beck <contact@maximilianbeck.de>",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bmaximilian/nodexec.git"
  },
  "keywords": [
    "executor",
    "bmaximilian",
    "javascript",
    "node",
    "server",
    "cli",
    "commands"
  ],
  "bugs": {
    "url": "https://github.com/bmaximilian/nodexec/issues"
  },
  "homepage": "https://github.com/bmaximilian/nodexec#readme",
  "license": "MIT",
  "dependencies": {
    "chalk": "^2.4.1",
    "glob": "^7.1.2",
    "lodash": "^4.17.10",
    "mkdirp": "^0.5.1"
  },
  "devDependencies": {
    "@types/chai": "^4.1.3",
    "@types/chalk": "^2.2.0",
    "@types/mocha": "^5.2.0",
    "chai": "^4.1.2",
    "eslint": "^4.19.1",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-friendly-formatter": "^4.0.1",
    "eslint-plugin-chai-friendly": "^0.4.1",
    "eslint-plugin-import": "^2.12.0",
    "mocha": "^5.2.0",
    "nyc": "^11.8.0"
  },
  "nyc": {
    "check-coverage": true,
    "per-file": false,
    "lines": 80,
    "statements": 80,
    "functions": 90,
    "branches": 90,
    "reporter": [
      "lcov",
      "text-summary",
      "html"
    ],
    "include": [
      "./src/**/*.js"
    ],
    "extension": [
      ".js"
    ],
    "cache": true,
    "all": true,
    "report-dir": "./coverage"
  }
}
